{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format Deep Research Markdown",
      "type": "shell",
      "command": "python3",
      "args": [
        "${workspaceFolder}/.vscode/format-deep-research.py",
        "${file}",
        "--inplace"
      ],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Compile Markdown to PDF",
      "type": "shell",
      "command": "python3 ${workspaceFolder}/.pandoc-templates/md2tex.py ${file} > ${fileDirname}/${fileBasenameNoExtension}.tex; pandoc ${file} -o ${fileDirname}/${fileBasenameNoExtension}.pdf --pdf-engine=tectonic --resource-path=${fileDirname} --template=${workspaceFolder}/.pandoc-templates/minimal-numbered.latex --highlight-style=tango --from markdown+tex_math_single_backslash+tex_math_dollars",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
