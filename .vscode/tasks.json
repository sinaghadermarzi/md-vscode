{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Markdown to PDF",
      "type": "shell",
      "command": "pandoc",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.pdf",
        "--pdf-engine=xelatex",
        "--resource-path=${fileDirname}",
        "--template=${workspaceFolder}/.pandoc-templates/minimal-numbered.latex",
        "--highlight-style=tango",
        "--lua-filter=${workspaceFolder}/.pandoc-templates/remove-badges.lua"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
